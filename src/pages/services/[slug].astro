---
import Site from '@/layouts/SiteLayout.astro';
import PageTitle from '@/components/PageTitle.astro';
import StickyDevis from '@/components/StickyDevis.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const entries = await getCollection('services');
  return entries.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { data } = entry;
const { Content } = await entry.render();
---
<Site
  title={data.seoTitle ?? data.title}
  description={data.seoDescription ?? data.excerpt}
  image="/og.jpg"
  type="article"
>
  <PageTitle title={data.title} subtitle={data.excerpt} />

  <article class="prose max-w-3xl mx-auto px-4 py-12 pb-28">
    <!-- pb-28 pour laisser la place au CTA sticky -->
    <Content />
  </article>

  <StickyDevis
    domain={data.domain ?? 'Services'}
    origin={`services/${entry.slug}`}
  />
</Site>
