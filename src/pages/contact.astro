---
const title = "Contact";
---
<html lang="fr">
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-white text-gray-900">
    <main class="mx-auto max-w-xl p-6">
      <h1 class="mb-6 text-3xl font-bold">Contact</h1>

      <form
        name="contact"
        method="POST"
        data-netlify="true"
        netlify-honeypot="bot-field"
        action="/merci"
        class="space-y-4"
      >
        <!-- requis pour l’identification du form -->
        <input type="hidden" name="form-name" value="contact" />

        <!-- honeypot anti-spam -->
        <p class="hidden">
          <label>Ne pas remplir : <input name="bot-field" /></label>
        </p>

        <label class="block">
          <span class="mb-1 block text-sm font-medium">Nom</span>
          <input class="w-full rounded border p-2" type="text" name="name" required />
        </label>

        <label class="block">
          <span class="mb-1 block text-sm font-medium">Email</span>
          <input class="w-full rounded border p-2" type="email" name="email" required />
        </label>

        <label class="block">
          <span class="mb-1 block text-sm font-medium">Message</span>
          <textarea class="w-full rounded border p-2" name="message" rows="5"></textarea>
        </label>

        <!-- (optionnel) reCAPTCHA intégré Netlify -->
        <!-- <div data-netlify-recaptcha="true"></div> -->

        <button type="submit" class="rounded bg-black px-4 py-2 text-white">
          Envoyer
        </button>
      </form>
    </main>
  </body>
</html>
