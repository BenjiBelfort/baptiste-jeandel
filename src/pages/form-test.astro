<html lang="fr">
  <head><meta charset="utf-8" /><title>Form Test</title></head>
  <body class="min-h-screen bg-white text-gray-900">
    <main class="mx-auto max-w-xl p-6">
      <h1 class="mb-6 text-2xl font-bold">Test Netlify Forms</h1>

      <form
        name="form-test"
        method="POST"
        data-netlify="true"
        netlify-honeypot="bot-field"
        action="/merci/"
        class="space-y-4"
      >
        <!-- Indispensable si jamais tu passes en soumission JS un jour -->
        <input type="hidden" name="form-name" value="form-test" />

        <!-- honeypot anti-spam -->
        <p class="hidden">
          <label>Ne pas remplir : <input name="bot-field" /></label>
        </p>

        <label class="block">
          <span class="mb-1 block text-sm font-medium">Nom PrÃ©nom</span>
          <input class="w-full rounded border p-2" type="text" name="name" required />
        </label>

        <label class="block">
          <span class="mb-1 block text-sm font-medium">Email</span>
          <input class="w-full rounded border p-2" type="email" name="email" required />
        </label>

        <label class="block">
          <span class="mb-1 block text-sm font-medium">Message</span>
          <textarea class="w-full rounded border p-2" name="message" rows="5"></textarea>
        </label>

        <button type="submit" class="rounded bg-black px-4 py-2 text-white">
          Envoyer
        </button>
      </form>
    </main>
  </body>
</html>
