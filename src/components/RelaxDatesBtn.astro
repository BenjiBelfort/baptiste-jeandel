---
const {
  label = 'Relaxation',
  color = 'bg-amber-300',
  textColor = 'text-white',
  size = 'md',
  class: extra = '',
} = Astro.props;

const sizeClasses = (
  size === 'sm' ? 'h-10 w-40 text-base' :
  size === 'lg' ? 'h-14 w-56 text-lg'  :
                  'h-12 w-48 text-base'
);
---
<span
  class={`inline-flex items-center justify-center whitespace-nowrap
          ${sizeClasses} border border-black px-4 py-0 font-bold
          ${color} ${textColor} ${extra}`}
>
  {label}
</span>
