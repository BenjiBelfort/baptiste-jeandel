---
import SectionTitle from "@/components/SectionTitle.astro"
import FunkyButton from "./FunkyButton.astro";

const { id = 'contact' } = Astro.props;
---
<section id={id} class="max-w-6xl mx-auto px-4 py-16">
  <div class="border p-8 md:p-10 bg-white flex flex-col items-center">
    <SectionTitle title="On en parle ?" />
    <p class="mt-2 text-stone-700">
      Décrivez votre besoin (public, objectifs, contraintes) : je vous réponds rapidement.
    </p>

    <div class="mt-4">
      <a
        href="tel:+33666636228"
        class="inline-flex items-center text-lg font-medium text-stone-900 hover:underline"
      >
        +33 (0)6 66 63 62 28
      </a>
    </div>

    <div class="mt-6">
        <FunkyButton
          as="link"
          href="/contact"
          label="Formulaire de contact"
          color="bg-slate-300"
        />
    </div>
  </div>
</section>
