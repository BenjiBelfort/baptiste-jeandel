---
const path = Astro.url.pathname;

// Autorisé uniquement sur "/", "/services" ou "/formations"
const showRelaxShortcut =
  path === "/" ||
  path === "/services" ||
  path === "/formations";
---

{showRelaxShortcut && (
  <div
    class="fixed z-40 pointer-events-none"
    style="top:72px; right:12px;"
  >
    <a
      href="/services/relaxations-sonores#dates"
      class="relative inline-flex items-center gap-2 px-3 py-1.5 border border-stone-900 bg-red-200
             font-semibold -rotate-1 pointer-events-auto
             after:absolute after:content-[''] after:border after:border-stone-900
             after:inset-0 after:translate-x-[4px] after:translate-y-[4px]
             hover:after:translate-x-[2px] hover:after:translate-y-[2px]
             transition-transform"
    >
      <span class="relative z-10 text-sm text-center">Dates relaxations sonores <br>
      à la Cravanchoise</span>
    </a>
  </div>
)}
