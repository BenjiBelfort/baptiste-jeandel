---
import FunkyButton from '@/components/FunkyButton.astro';
---

<section
  class="relative w-full min-h-screen flex items-center"
  style="
    --hero-bg: url('/images/instruments.webp');
    --hero-content-w: 760px; /* règle la largeur du container central */
  "
>
  <!-- Image de fond SANS blur -->
  <div
    class="absolute inset-0
          bg-[image:var(--hero-bg)]
          bg-cover bg-center bg-no-repeat
          bg-scroll md:bg-fixed
          sepia-25"
    aria-hidden="true">
  </div>

  <!-- Voile blanc semi-transparent avec flou sur le fond -->
  <div class="absolute inset-0 bg-white/50 backdrop-blur-sm md:backdrop-blur" aria-hidden="true"></div>


  <!-- Contenu centré au premier plan -->
  <div class="relative z-10 w-full">
    <div class="mx-auto px-4">
      <div
        class="mx-auto text-center p-6"
        style="max-width: var(--hero-content-w);"
      >
        <h1 class="text-7xl md:text-9xl font-bold hand text-black">
          Baptiste Jeandel
        </h1>

        <!-- Mets tes <br /> où tu veux -->
        <h2
          class="mt-4 text-lg sm:text-xl md:text-3xl font-bold text-black"
        >
          Musique, médiation et transmission<br />pour tous les âges et tous les publics.
        </h2>
      </div>
    </div>
  </div>

  <!-- Bouton centré en bas (pas collé) -->
  <div
    class="pointer-events-auto absolute left-1/2 -translate-x-1/2 bottom-8 md:bottom-12 z-10"
    aria-label="Aller à la section suivante"
  >
    <FunkyButton href="/#value-props" label="Découvrir" color="bg-slate-300" />
  </div>
</section>
