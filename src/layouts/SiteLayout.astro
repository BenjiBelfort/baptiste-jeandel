---
import BaseHead from '@/components/BaseHead.astro';
import Nav from '@/components/Nav.astro';
import RelaxShortcut from '@/components/RelaxShortcut.astro';
import Footer from '@/components/Footer.astro';
import '@/styles/fonts.css';
import '@/styles/global.css';

const { title, description, image, type } = Astro.props;
---
<html lang="fr" class="scroll-smooth h-full">
  <BaseHead {title} {description} {image} {type} />
  <body class="h-full min-h-[100svh] flex flex-col antialiased text-stone-900 bg-slate-100">
    <!-- Nav est FIXED dans son propre composant -->
    <Nav />
    <RelaxShortcut />
    <!-- Contenu qui prend toute la place restante -->
    <main id="main" class="flex-1 pt-12">
      <slot />
    </main>


    <Footer />
  </body>
</html>
